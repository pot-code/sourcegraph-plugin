{
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-typescript": "^7.3.3",
    "babel-preset-minify": "^0.5.0",
    "husky": "^2.2.0",
    "lint-staged": ">=8",
    "prettier": "^1.17.0",
    "rollup": "^1.12.4",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-node-resolve": "^5.0.0"
  },
  "scripts": {
    "build": "rollup -c"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn build && git add build/* && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,css,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
